<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userDashBoardController">
   <left>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <image>
                  <Image url="@../../Icon/user_64.png" />
               </image>
            </ImageView>
            <Label fx:id="LableName" text="Name" />
            <Button fx:id="btnEditProfile" mnemonicParsing="false" onAction="#btnEditProfileClicked" prefHeight="24.0" prefWidth="110.0" text="Edit Profile" />
         </children>
      </VBox>
   </left>
   <top>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Airline Reservatiion System" />
            <Button fx:id="btnAvilableFlight" mnemonicParsing="false" onAction="#btnAvilableFlightCliked" text="Avilable Flight" />
            <Button fx:id="btnMyticket" mnemonicParsing="false" onAction="#btnMyticketClicked" prefHeight="24.0" prefWidth="110.0" text="My Ticket" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#btnLogoutClicked" text="Log out" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imageView" fitHeight="218.0" fitWidth="339.0" pickOnBounds="true" smooth="false" VBox.vgrow="ALWAYS">
               <image>
                  <Image url="@../../../Image/Home.jpg" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </center>
</BorderPane>
