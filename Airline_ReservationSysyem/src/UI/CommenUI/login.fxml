<VBox prefHeight="360.0" prefWidth="713.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <GridPane alignment="CENTER" style="-fx-background-color: pink;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="201.0" minWidth="10.0" prefWidth="126.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="252.0" minWidth="10.0" prefWidth="197.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="71.0" minHeight="10.0" prefHeight="48.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="159.0" minHeight="10.0" prefHeight="57.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="117.0" minHeight="10.0" prefHeight="71.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="117.0" minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <VBox.margin>
            <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
         </VBox.margin>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: grey;" GridPane.columnSpan="3">
               <children>
                  <Label alignment="BOTTOM_CENTER" text="Login" textFill="#f5f4f4">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <padding>
                        <Insets top="16.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <Label text="Login ID*" textFill="#2f0b0b" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label text="Password*" GridPane.rowIndex="2">
               <font>
                  <Font size="17.0" />
               </font>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Label>
            <TextField promptText="Admin" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <PasswordField text="11011101" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font size="15.0" />
               </font>
            </PasswordField>
            <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <Button fx:id="LoginButton" mnemonicParsing="false" onAction="#loginBtnClicked" text="Login" />
                  <Label text="Or" />
                  <Button fx:id="signupBtn" mnemonicParsing="false" onAction="#SignUpclicked" prefHeight="19.0" prefWidth="71.0" style="-fx-background-color: blue;" text="Sign up">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </children>
</VBox>
